<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/fill_receipt"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

              <ImageView
                  android:layout_width="35dp"
                  android:layout_height="match_parent"
                  android:src="@drawable/gongsi"
                  android:gravity="left"
                  android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/huizhi_clientName"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10sp"
                android:gravity="center_vertical"
                android:text="盐场"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e1e1">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/cargo"
                android:layout_marginLeft="10dp"/>
            
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_marginLeft="10dp">
               
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="25dp"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp">

                   <ImageView
                       android:layout_width="21dp"
                       android:layout_height="21dp"
                       android:layout_marginLeft="5dp"
                       android:src="@drawable/yundan"/>

                   <TextView
                       android:layout_width="50dp"
                       android:layout_height="20dp"
                       android:text="@string/receipt_id"/>

                   <TextView
                       android:id="@+id/huizhi_wayBillId"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginLeft="10dp"
                       android:text="JW125388"
                       android:textStyle="bold" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_width="16dp"
                       android:layout_height="16dp"
                       android:layout_marginLeft="7.5dp"
                       android:layout_marginTop="5dp"
                       android:src="@drawable/huowu"/>

                   <TextView
                       android:layout_width="50dp"
                       android:layout_height="20dp"
                       android:layout_marginLeft="3dp"
                       android:text="@string/cargo_name"/>

                   <TextView
                       android:id="@+id/huizhi_cargoName"
                       android:layout_width="150dp"
                       android:layout_height="match_parent"
                       android:layout_marginLeft="10dp"
                       android:text="废盐"
                       android:textColor="@color/colorAccent"
                       android:textSize="15sp"
                       android:textStyle="bold" />

                   <ImageView
                       android:id="@+id/fill_huizhi"
                       android:layout_width="30dp"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:src="@drawable/pencil"
                       android:layout_marginRight="10dp"
                       android:textColor="@color/colorPrimaryDark" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/huizhi_start"
                       android:layout_width="50dp"
                       android:layout_height="20dp"
                       android:layout_marginLeft="10dp"
                       android:text="淮安"
                       android:textColor="@color/colorPrimary"
                       android:textStyle="bold" />
                   
                   <TextView
                       android:layout_width="80dp"
                       android:layout_height="match_parent"
                       android:text="——————"/>

                   <TextView
                       android:id="@+id/huizhi_end"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginLeft="10dp"
                       android:text="上海"
                       android:textColor="@color/colorPrimary"
                       android:textStyle="bold" />

               </LinearLayout>
               
           </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b7b7b7">

        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>